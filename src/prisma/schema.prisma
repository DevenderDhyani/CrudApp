generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Profile {
    id       String @id @default(auto()) @map("_id") @db.ObjectId // Unique identifier
    fullName    String   @db.String
    mobileNumber String   @db.String @unique // Unique mobile number
    email       String   @db.String @unique // Unique email address
    dob         DateTime // Date of birth
    gender      String?  // Optional field for gender (e.g., 'Male', 'Female', 'Other')
    Address     Address[]
    @@map("Profile") // Optional: Map to a specific table name in the database
}
model Address {
    id          String   @id @default(uuid()) @map("_id") // Unique identifier as a string (UUID)
    fullName    String
    mobileNumber String   @unique // Unique mobile number
    houseNo     String
    sector      String
    landmark     Strin`g?
    pincode     String
    city        String
    state       String
    addressType String   // e.g., 'Home', 'Office', 'Billing', etc.
    user        Profile @relation(fields: [userId], references: [id])
    userId String @db.ObjectId
    @@map("addresses") // Maps the model to the actual table name in the database
}
